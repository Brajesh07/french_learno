rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to admins collection for authenticated admins only
    match /admins/{adminId} {
      allow read, write: if request.auth != null && request.auth.uid == adminId;
    }
    
    // Allow read/write access to students collection for authenticated admins only
    match /students/{studentId} {
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Allow read/write access to courses collection for authenticated admins only
    match /courses/{courseId} {
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Allow read/write access to quizzes collection for authenticated admins only
    match /quizzes/{quizId} {
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Allow read/write access to quiz results for authenticated admins only
    match /quizResults/{resultId} {
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Allow read/write access to notifications for authenticated admins only
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Allow read access to analytics data for authenticated admins only
    match /analytics/{analyticsId} {
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
